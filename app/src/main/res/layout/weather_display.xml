<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_page"

    android:layout_centerHorizontal="true">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBar"
        android:layout_gravity="center_vertical|center_horizontal"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background_image"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh_white_24dp"
            android:id="@+id/refreshButton"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/circle_refresh_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_weight="2">

        <ImageButton
            android:layout_width="35dp"
            android:paddingLeft="5dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@android/ic_menu_add"
            android:id="@+id/nav"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:gravity="end">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagebutton"
            android:src="@android:drawable/ic_menu_add"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:ellipsize="end"
        style="@style/AudioFileInfoOverlayText"
        android:id="@+id/city_name"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_imageview"
        android:layout_gravity="center_horizontal"
        android:paddingRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/condition_textview"
        style="@style/AudioFileInfoOverlayText"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        style="@style/AudioFileInfoOverlayText"
        android:id="@+id/temp_textview"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AudioFileInfoOverlayText"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text="Forecast"
            android:background="@color/background_opaque"
            android:id="@+id/forecast_label"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_opaque"
            android:id="@+id/scrollView">

            <include layout="@layout/forcast_listing"></include>

        </ScrollView>

    </LinearLayout>

    </FrameLayout>
</LinearLayout>
